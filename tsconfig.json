{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "Commonjs",
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src",
  ]
}